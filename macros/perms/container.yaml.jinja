{% from "macros/global/perms/script.sh.jinja" import perms_shell %}

{% macro perms_container(name, mode, uid, gid, chmod) %}
{{ name }}:
  image: bash
  user: root
  entrypoint:
    - bash
    - -c
  command:
    - |
      {{- perms_shell(mode=mode, uid=uid, gid=gid, chmod=chmod) | indent(6) }}
{% endmacro %}
